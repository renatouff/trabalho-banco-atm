<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>grupo6</groupId>
    <artifactId>trabalho-intro-dev-web</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>war</packaging>
    <name>trabalho-intro-dev-web</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jakartaee>10.0.0</jakartaee> <!-- Versão da API Jakarta EE utilizada no projeto -->
    </properties>

    <dependencies>
        <!-- Dependência da API Jakarta EE para desenvolvimento de aplicações web (Servlets, JSP, etc) -->
        <dependency>
            <groupId>jakarta.platform</groupId>
            <artifactId>jakarta.jakartaee-api</artifactId>
            <version>${jakartaee}</version>
            <!-- O servidor de aplicação (GlassFish) fornecerá essa API em tempo de execução -->
            <scope>provided</scope> 
        </dependency>

        <!-- Dependência do driver JDBC para o MySQL -->
        <dependency>
            <groupId>com.mysql</groupId>
            <artifactId>mysql-connector-j</artifactId>
            <version>8.0.33</version>
        </dependency>

        <!-- JSTL Jakarta EE 10 (API fornecida pelo servidor + implementação) -->
        <dependency>
            <groupId>jakarta.servlet.jsp.jstl</groupId>
            <artifactId>jakarta.servlet.jsp.jstl-api</artifactId>
            <version>3.0.0</version>
            <scope>provided</scope> <!-- API fornecida pelo GlassFish -->
        </dependency>

        <dependency>
            <groupId>org.glassfish.web</groupId>
            <artifactId>jakarta.servlet.jsp.jstl</artifactId>
            <version>3.0.0</version> <!-- Implementação da JSTL necessária para GlassFish -->
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Plugin para compilação do código Java. Configura a versão para o JDK 11. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>11</source>
                    <target>11</target>
                </configuration>
            </plugin>

            <!-- Plugin para empacotar a aplicação como um arquivo WAR. 
                 Implantação em servidores GlassFish. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.3.2</version>
            </plugin>
        </plugins>
    </build>
</project>
